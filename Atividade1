    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void button1_Click(object sender, EventArgs e)
        {
            double pi = 3.1415;
            float num;
            {
            if (!(float.TryParse(textBox1.Text, out num)))
            {
                if (textBox1.Text == "")
                    MessageBox.Show("Sem raio!");
                else
                    MessageBox.Show("Insira um número válido!");
            }
            }
            if (!(float.TryParse(textBox2.Text, out num)))
            {
                if (textBox2.Text == "") 
                    MessageBox.Show("Sem altura!");
                else
                    MessageBox.Show("Insira um número válido!");
            }
            textBox3.Text = ((float.Parse(textBox1.Text) * pi) * float.Parse(textBox2.Text)).ToString() ;
        }

        private void textBox1_TextChanged(object sender, EventArgs e)
        {
            if (!(float.TryParse(textBox1.Text, out float num)))
            {
                if (textBox1.Text == "")
                    MessageBox.Show("Sem raio!");
                else
                    MessageBox.Show("O raio não é número!");
                textBox1.Text = "";
            }
        }

        private void textBox2_TextChanged(object sender, EventArgs e)
        {
            if (!(float.TryParse(textBox2.Text, out float num)))
            {
                if (textBox2.Text == "")
                    MessageBox.Show("Sem altura!");
                else
                    MessageBox.Show("A altura não é número!");
                                textBox1.Text = "";
            }
        }

        private void button2_Click(object sender, EventArgs e)
        {
            Application.Exit();
        }

    }
